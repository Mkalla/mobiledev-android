<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ReportDetailActivity"
        android:orientation="vertical">
        <TextView
            android:id="@+id/emguide_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/listSeparatorTextViewStyle"
            android:text="Involved in an accident?"
            android:textSize="10pt"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/detail_xchg_p_1"
            android:paddingBottom="5pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="As soon as your car is involved in an accident you need to take the following steps, regardless of who was at fault." />

        <ListView
            android:id="@+id/detail_xchg_terms_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_xchg_p_1">
        </ListView>

        <TextView
            android:id="@+id/detail_xchg_p_2"
            android:paddingTop="5pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Then you must:" />

        <ListView
            android:id="@+id/detail_xchg_actions_1_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_xchg_p_2">
        </ListView>

        <TextView
            android:id="@+id/detail_xchg_p_3"
            android:paddingTop="10pt"
            android:paddingBottom="5pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you don't exchange those details at the scene, you must report the accident at a police station or to a police constable as soon as you can, and in any case within 24 hours." />

        <TextView
            android:id="@+id/detail_xchg_p_4"
            android:paddingTop="5pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="If another person is injured you must:" />

        <ListView
            android:id="@+id/detail_xchg_actions_2_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_xchg_p_4">
        </ListView>

        <TextView
            android:id="@+id/detail_xchg_p_5"
            android:paddingTop="10pt"
            android:paddingBottom="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reporting the accident to the police by telephone is not sufficient and you cannot ask someone else to report for you. \r\n\r\nYou're obliged to do these things not only when you are directly involved in an accident, but also if your vehicle's 'presence' was a factor." />

        <Button
            android:id="@+id/detail_xchg_file_report_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="File Accident Report"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#f9598e"/>
    </LinearLayout>
</ScrollView>