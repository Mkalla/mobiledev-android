<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="hdm.csm.emergency.EmergencyReactionGuide">
            <TextView
                android:id="@+id/emguide_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/listSeparatorTextViewStyle"
                android:text="Emergency Reaction Guide"
                android:textSize="10pt"
                android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/emguide_motorway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emguide_title">
            <TextView
                android:id="@+id/emguide_motorway_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5pt"
                android:text="Have you broken down on the motorway?"
                android:textSize="7pt"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/emguide_motorway_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/emguide_motorway_header">
            </ListView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/emguide_road"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emguide_motorway">
            <TextView
                android:id="@+id/emguide_road_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5pt"
                android:text="Have you broken down elsewhere?"
                android:textSize="7pt"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/emguide_road_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/emguide_road_header">
            </ListView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/emguide_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emguide_road">
            <TextView
                android:id="@+id/emguide_notes_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5pt"
                android:text="Important Notes:"
                android:textSize="7pt"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/emguide_notes_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/emguide_notes_header">
            </ListView>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>